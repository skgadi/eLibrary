{
	"name" : "eLibrary",
	"description" : "A library for your ebooks.",
	"version" : "0.0.1",
	"manifest_version" : 2,
	"permissions" : [
		"storage",
		"notifications",
		"syncFileSystem",
		"unlimitedStorage", {
			"fileSystem" : ["requestFileSystem", "write", "retainEntries", "directory"]
		}
	],
	"app" : {
		"background" : {
			"scripts" : [
				"scripts/background.js"
			]
		}
	},
	"icons" : {
		"16" : "images/icons/Icon-16.png",
		"32" : "images/icons/Icon-32.png",
		"64" : "images/icons/Icon-64.png",
		"120" : "images/icons/Icon-120.png",
		"128" : "images/icons/Icon-128.png",
		"152" : "images/icons/Icon-152.png",
		"512" : "images/icons/iTunesArtwork.png",
		"1024" : "images/icons/iTunesArtwork@2x.png"
	}
}
